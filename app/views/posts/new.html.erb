<h1 class="title is-5">New Post</h1>
<%= form_with url: posts_path, scope: :data do |f| %>
  <div class="field">
    <%= f.label :title, "Post Title", class: "label" %>
    <%= f.text_field :title, placeholder: "Post Title", required: true, class: "input" %>
  </div>
  <div>
    <%= f.text_area :text, placeholder: "Please type in your post...", rows: 16, required: true, class: "textarea has-fixed-size" %>
  </div>
  <%= f.submit "Publish Post", class: "button is-link is-success" %>
<% end %>